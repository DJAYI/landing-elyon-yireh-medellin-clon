  <div
    class="grid grid-cols-1 md:grid-cols-1 lg:grid-cols-[1fr_1px_1fr] items-center gap-10"
  >
    <div class="grid grid-cols-1 gap-10 px-4 sm:grid-cols-2 slide-out">
      {
        cursos.map((curso) => (
          <span class="flex flex-col text-pretty">
            <h3 class="text-lg text-white font-designer">{curso.curso}</h3>
            <h3 class="italic text-sm font-semibold text-[#fc4]">
              {curso.resolucion}
            </h3>
          </span>
        ))
      }
    </div>

    <HorizontalDivider color="yellow" />

    <img
      class="w-full h-full px-4 object-cover aspect-[11/6] rounded-xl shadow-lg show-in"
      src="images/Cursos.jpg"
      alt="Elyon Yireh Cursos Cortos"
    />
