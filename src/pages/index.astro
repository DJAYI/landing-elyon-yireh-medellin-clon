---
import Layout from "@layouts/Layout.astro";
import Counter from "@sections/Counter.astro";
import Header from "@sections/Header.astro";
import Main from "@sections/Main.astro";
import Programs from "@sections/Programs.astro";
import Curses from "@sections/Curses.astro";
import Info from "@sections/Info.astro";
import Phases from "@sections/Phases.astro";
import HitCases from "@sections/HitCases.astro";
import Headquarters from "@sections/Headquarters.astro";
import FAQ from "@sections/FAQ.astro";
import Footer from "@sections/Footer.astro";
import VerticalDivider from "@components/utils/VerticalDivider.astro";
import GradientDivider from "@components/utils/GradientDivider.astro";
import ButtonLinked from "@components/utils/ButtonLinked.astro";
---

<Layout title="Welcome to Astro.">
  <Counter />
  <div class="relative flex flex-col items-center mx-auto my-4 xl:max-w-6xl">
    <Header />
    <div class="my-20">
      <Main />
    </div>
    <div class="flex flex-col gap-28 my-36">
      <Programs />
      <Curses />
    </div>
    <Info />
    <Phases />
    <div class="flex flex-col gap-16 my-36">
      <GradientDivider color="green" />
      <HitCases />
      <GradientDivider color="green" />
    </div>
    <div class="flex flex-col items-center gap-8 mx-4 text-center">
      <Headquarters />
      <ButtonLinked href="/" text="Comienza con Nosotros Hoy Mismo" />
      <p class="px-4 text-center text-white lg:w-1/2 sm:w-full text-pretty">
        Si te registras recibe un 50% de descuento en tu programa técnico o
        curso gracias a la Fundación Opción Mundial (puede ser un mensaje que
        aparezca al llegar al formulario de registro).
      </p>
    </div>
    <FAQ />
    <Footer />
  </div>
</Layout>
